# Example Terraform variables file
# Copy this to terraform.tfvars and customize the values

# Project configuration
project_name = "interesting-chess"
aws_region   = "us-east-1"

# Application configuration
app_name = "interesting-chess"
app_version  = "1.0.0"
username = "your-chess-username"
email    = "your-email@example.com"

# Chess.com scraping configuration
titles         = "GM,WGM,IM,WIM,FM,WFM,NM,WNM,CM,WCM"
days_window    = 30
request_sleep_s = 0.25
limit_players  = 0  # 0 for no limit, set to positive number for testing

# Scheduling (cron expression for daily run at 03:05 UTC)
schedule_expression = "cron(5 3 * * ? *)"

# CloudFront distribution (set to false to disable)
create_cloudfront = true
